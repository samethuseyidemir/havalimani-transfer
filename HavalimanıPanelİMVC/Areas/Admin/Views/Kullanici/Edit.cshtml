@model HavalimaniPanelMVC.Models.Kullanici

@{
    ViewData["Title"] = "Kullanıcı Güncelle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h3 class="text-warning mb-4 text-center">Kullanıcı Güncelle</h3>

            <form method="post">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Ad" class="form-label">Ad</label>
                    <input asp-for="Ad" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="Soyad" class="form-label">Soyad</label>
                    <input asp-for="Soyad" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="Sifre" class="form-label">Şifre</label>
                    <input asp-for="Sifre" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="Telefon" class="form-label">Telefon</label>
                    <input asp-for="Telefon" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="RolId" class="form-label">Rol</label>
                    <select asp-for="RolId" class="form-select">
                        <option value="1">Admin</option>
                        <option value="2">Şirket</option>
                        <option value="3">Kullanıcı</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label asp-for="AktifMi" class="form-label">Aktif mi?</label>
                    <select asp-for="AktifMi" class="form-select">
                        <option value="true">Aktif</option>
                        <option value="false">Pasif</option>
                    </select>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
                    <button type="submit" class="btn btn-warning">Güncelle</button>
                </div>
            </form>
        </div>
    </div>
</div>
