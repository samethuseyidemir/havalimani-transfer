@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Dashboard";
}

<h2 class="mb-4 text-primary">Kontrol Paneli</h2>

<div class="row">
    <div class="col-md-3">
        <div class="card text-white bg-primary mb-3">
            <div class="card-body">
                <h5 class="card-title">Toplam Kullanıcı</h5>
                <p class="card-text fs-3">@ViewBag.KullaniciSayisi</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success mb-3">
            <div class="card-body">
                <h5 class="card-title">Toplam Şirket</h5>
                <p class="card-text fs-3">@ViewBag.SirketSayisi</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-warning mb-3">
            <div class="card-body">
                <h5 class="card-title">Toplam Transfer</h5>
                <p class="card-text fs-3">@ViewBag.TransferSayisi</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-danger mb-3">
            <div class="card-body">
                <h5 class="card-title">Bugünkü Rezervasyon</h5>
                <p class="card-text fs-3">@ViewBag.BugunkuRezervasyon</p>
            </div>
        </div>
    </div>
</div>
