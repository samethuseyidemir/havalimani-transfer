@model HavalimaniPanelMVC.Models.Rezervasyon

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Rezervasyon Ekle";
}

<h2 class="text-success mb-3">Yeni Rezervasyon Ekle</h2>

<form asp-action="Create" method="post" class="row g-3">
    <div class="col-md-6">
        <label class="form-label">Kullanıcı Seç</label>
        <select asp-for="KullaniciId" class="form-select" asp-items="@(new SelectList(ViewBag.Kullanicilar, "Id", "AdSoyad"))">
            <option value="">-- Seçiniz --</option>
        </select>
    </div>

    <div class="col-md-6">
        <label class="form-label">Transfer Seç</label>
        <select asp-for="TransferId" class="form-select" asp-items="@(new SelectList(ViewBag.Transferler, "Id", "Guzergah"))">
            <option value="">-- Seçiniz --</option>
        </select>
    </div>

    <div class="col-md-6">
        <label class="form-label">Rezervasyon Tarihi</label>
        <input type="datetime-local" asp-for="RezervasyonTarihi" class="form-control" />
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-check-circle"></i> Kaydet
        </button>
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </div>
</form>
