@model List<HavalimaniPanelMVC.Models.Transfer>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Transfer Listesi";
}

<h2 class="mb-4 text-primary">Transfer Listesi</h2>

<a href="/Admin/Transfer/Create" class="btn btn-success mb-3">
    <i class="bi bi-plus-lg"></i> Yeni Transfer Ekle
</a>

<div class="table-responsive">
    <table class="table table-bordered table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>Başlangıç</th>
                <th>Bitiş</th>
                <th>Tarih / Saat</th>
                <th>Ücret</th>
                <th>Araç ID</th>
                <th>Durum</th>
                <th style="width: 150px;">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in Model)
            {
                <tr>
                    <td>@t.BaslangicNoktasi</td>
                    <td>@t.BitisNoktasi</td>
                    <td>@t.TarihSaat.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>@t.Ucret ₺</td>
                    <td>@t.AracId</td>
                    <td>
                        @if (t.AktifMi)
                        {
                            <span class="badge bg-success">Aktif</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Pasif</span>
                        }
                    </td>
                    <td>
                        <a href="/Admin/Transfer/Edit/@t.Id" class="btn btn-sm btn-warning">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a href="/Admin/Transfer/Delete/@t.Id"
                           onclick="return confirm('Bu transferi silmek istediğinize emin misiniz?');"
                           class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
