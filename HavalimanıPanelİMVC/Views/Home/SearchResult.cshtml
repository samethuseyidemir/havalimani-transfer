@model List<HavalimaniPanelMVC.Models.Transfer>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Transfer Sonuçları";
}

<div class="container mt-5">
    <h2 class="mb-4">Uygun Transferler</h2>

    @if (Model.Count == 0)
    {
        <div class="alert alert-warning">Uygun transfer bulunamadı.</div>
    }
    else
    {
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Başlangıç</th>
                    <th>Bitiş</th>
                    <th>Tarih</th>
                    <th>Ücret</th>
                    <th>Araç ID</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var t in Model)
                {
                    <tr>
                        <td>@t.BaslangicNoktasi</td>
                        <td>@t.BitisNoktasi</td>
                        <td>@t.TarihSaat.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>@t.Ucret ₺</td>
                        <td>@t.AracId</td>
                        <td>
                            <a href="/Rezervasyon/Create?transferId=@t.Id" class="btn btn-sm btn-success">
                                Rezervasyon Yap
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
