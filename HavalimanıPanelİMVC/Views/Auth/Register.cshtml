@model HavalimaniPanelMVC.Models.KullaniciRegisterModel

@{
    ViewData["Title"] = "Kayıt Ol";
}

<section class="vh-100 d-flex justify-content-center align-items-center bg-light">
    <div class="card shadow p-4 border-0" style="width: 100%; max-width: 400px;">
        <div class="text-center mb-4">
            <i class="bi bi-person-plus-fill display-4 text-primary"></i>
            <h4 class="mt-2 fw-bold">Kayıt Ol</h4>
            <p class="text-muted small">Lütfen bilgilerinizi giriniz</p>
        </div>

        <form method="post" asp-action="Register">
            <div class="mb-3">
                <label asp-for="Ad" class="form-label">Ad</label>
                <input type="text" class="form-control" asp-for="Ad" placeholder="Adınız" required />
                <span class="text-danger">@Html.ValidationMessageFor(m => m.Ad)</span>
            </div>

            <div class="mb-3">
                <label asp-for="Soyad" class="form-label">Soyad</label>
                <input type="text" class="form-control" asp-for="Soyad" placeholder="Soyadınız" required />
                <span class="text-danger">@Html.ValidationMessageFor(m => m.Soyad)</span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">E-posta</label>
                <input type="email" class="form-control" asp-for="Email" placeholder="ornek@mail.com" required />
                <span class="text-danger">@Html.ValidationMessageFor(m => m.Email)</span>
            </div>

            <div class="mb-3">
                <label asp-for="Sifre" class="form-label">Şifre</label>
                <input type="password" class="form-control" asp-for="Sifre" placeholder="******" required />
                <span class="text-danger">@Html.ValidationMessageFor(m => m.Sifre)</span>
            </div>

            <div class="mb-3">
                <label asp-for="Telefon" class="form-label">Telefon</label>
                <input type="tel" class="form-control" asp-for="Telefon" placeholder="05XXXXXXXXX" required />
                <span class="text-danger">@Html.ValidationMessageFor(m => m.Telefon)</span>
            </div>

            @* RolId alanını gizli (hidden) olarak sabit 3 (normal kullanıcı) verdik *@
            <input type="hidden" asp-for="RolId" value="3" />

            <button type="submit" class="btn btn-primary w-100">Kayıt Ol</button>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger mt-3">@ViewBag.Error</div>
            }

            <div class="text-center mt-3">
                <a asp-action="Login" asp-controller="Auth" class="text-decoration-none small">Zaten hesabınız var mı? Giriş Yap</a>
            </div>
        </form>
    </div>
</section>
