@model HavalimaniPanelMVC.Models.KullaniciLoginModel

@{
    ViewData["Title"] = "Giriş Yap";
}

<section class="vh-100 d-flex justify-content-center align-items-center bg-light">
    <div class="card shadow p-4 border-0" style="width: 100%; max-width: 400px;">
        <div class="text-center mb-4">
            <i class="bi bi-lock-fill display-4 text-primary"></i>
            <h4 class="mt-2 fw-bold">Giriş Yap</h4>
            <p class="text-muted small">Lütfen giriş bilgilerinizi giriniz</p>
        </div>

        <form method="post" asp-action="Login">
            <div class="mb-3">
                <label for="Email" class="form-label">E-posta</label>
                <input type="email" class="form-control" asp-for="Email" placeholder="ornek@mail.com" required>
            </div>

            <div class="mb-3">
                <label for="Sifre" class="form-label">Şifre</label>
                <input type="password" class="form-control" asp-for="Sifre" placeholder="******" required>
            </div>

            <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger mt-3">@ViewBag.Error</div>
            }

            <div class="text-center mt-3">
                <a href="/Auth/Register" class="text-decoration-none small">Hesabınız yok mu? Kayıt olun</a>
            </div>

            <!-- ─────────── Aşağıya eklenen kısım ─────────── -->
            <hr class="my-3" />

            <div class="text-center">
                <p class="small">Bir işletme misiniz?</p>
                <a href="/Auth/SirketRegister" class="text-decoration-none small">
                    Şirket olarak kayıt olun
                </a>
            </div>
            <!-- ─────────────────────────────────────────────── -->

        </form>
    </div>
</section>
